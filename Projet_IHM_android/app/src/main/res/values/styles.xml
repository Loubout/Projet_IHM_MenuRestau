<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>

    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttonStyle" parent="android:Widget.DeviceDefault.ActionButton" >
        <item name="android:background">@color/button_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="leftPaneStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#333333</item>
        <item name="android:gravity">top</item>
    </style>


    <style name="categoryButtonStyle">

        <item name="android:background">@drawable/buttonselector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:padding">6px</item>
        <item name="android:paddingBottom">12px</item>
        <item name="android:paddingTop">12px</item>
        <item name="android:layout_margin">10px</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

</resources>
