<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/LinearLayout1"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.willy.projet_ihm_android.Panier" >

    <TextView
        android:id="@+id/panierText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recapitulatif des commandes"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/platText"
        android:layout_below="@id/panierText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Plat"
        android:text="commande"
        />

    <TextView
        android:id="@+id/quantiteText"
        android:layout_below="@id/panierText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@id/platText"
        tools:text="Quantite"
        android:text="Quantite"
        />

    <TextView
        android:id="@+id/prixText"
        android:layout_below="@id/panierText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@id/quantiteText"
        tools:text="prix"
        android:text="Prix"
        />


    <Button
        android:id="@+id/retourMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        tools:text="Retour"
        />
    <Button
        android:id="@+id/buttonValiderCommande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/retourMenu"
        tools:text="Valider" />
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonValiderCommande"
        tools:text="Total:"
        android:text="Total: "/>
    <TextView
        android:id="@+id/valeurTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/total" />
    <TextView
        android:id="@+id/euro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/valeurTotal"
        android:text="â‚¬"/>
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/platText"
        android:layout_above="@id/retourMenu"
        >
    </ListView>


    </RelativeLayout>