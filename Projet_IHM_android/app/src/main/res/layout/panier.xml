<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/panier_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".panier.Panier"
    android:background="#ffffff">
    <TextView
        android:id="@+id/panierText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recapitulatif des commandes"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/platText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Plat"
        android:text="Produits"
        android:layout_below="@+id/panierText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/quantiteText" />

    <TextView
        android:id="@+id/quantiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Quantite"
        android:text="Nombre"
        android:layout_below="@+id/panierText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/prixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="prix"
        android:text="Prix"
        android:layout_below="@+id/panierText"
        android:layout_alignEnd="@+id/panierText" />


    <Button
        android:id="@+id/retourMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Retour"
        android:text="Retour"
        android:layout_above="@+id/boutonServeur"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/buttonValiderCommande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Valider"
        android:layout_below="@+id/retourMenu"
        android:layout_alignParentEnd="true"
        android:text="valider commande"
        android:layout_toEndOf="@+id/boutonServeur" />
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Total:"
        android:text="Total: "
        android:layout_alignTop="@+id/retourMenu"
        android:layout_toStartOf="@+id/prixText" />

    <TextView
        android:id="@+id/euro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="â‚¬"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/total" />

    <ListView
        android:id="@+id/commandeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platText"
        android:layout_alignParentStart="true"
        android:divider="@android:color/black"
        android:dividerHeight="4px"
        android:layout_alignBottom="@+id/view">
    </ListView>
    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platText"
        android:layout_alignParentStart="true"
        android:divider="@android:color/black"
        android:dividerHeight="4px"
        android:layout_alignBottom="@+id/view"
        android:text="menu/text_empty"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/panierText" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@android:color/black"
        android:layout_above="@+id/total"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalprix"
        android:layout_alignTop="@+id/euro"
        android:layout_alignBottom="@+id/total"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/total" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appel Serveur"
        android:id="@+id/boutonServeur"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>